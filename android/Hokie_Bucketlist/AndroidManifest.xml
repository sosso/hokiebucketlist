<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sossostats"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SossoStats"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginScreenActivity"
            android:label="@string/title_activity_display_club_stats" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sossostats.MainActivity" />
        </activity>
        <activity
            android:name=".DisplayClubStatsActivity"
            android:label="@string/title_activity_display_club_stats" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sossostats.MainActivity" />
        </activity>
        <activity
            android:name=".ListActivity2"
            android:label="@string/title_activity_display_club_stats" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sossostats.MainActivity" />
        </activity>
        <activity
            android:name=".DisplayPlayerStatsActivity"
            android:label="@string/title_activity_display_club_stats" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sossostats.MainActivity" />
        </activity>
    </application>

</manifest>